{
  "plugins": ["prettier", "node"],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:node/recommended"
  ],
  "overrides": [
    {
      "files": ["stories/**/*.js"],
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {
        "node/no-unsupported-features/es-syntax": "off"
      }
    },
    {
      "files": ["tests/**/*.js"],
      "plugins": ["ava"],
      "extends": ["plugin:ava/recommended"],
      "rules": {
        "node/no-unpublished-import": "off",
        "node/no-unsupported-features/es-syntax": "off"
      }
    }
  ]
}
