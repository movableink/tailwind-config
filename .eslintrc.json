{
  "extends": ["@movable/eslint-config", "@movable/eslint-config-node"],
  "overrides": [
    {
      "files": ["stories/**/*.js"],
      "parserOptions": {
        "sourceType": "module"
      },
      "env": {
        "browser": true
      },
      "rules": {
        "node/no-unsupported-features/es-syntax": "off"
      }
    },
    {
      "files": ["tests/**/*.js"],
      "plugins": ["ava"],
      "extends": ["plugin:ava/recommended"],
      "rules": {
        "node/no-unpublished-import": "off",
        "node/no-unsupported-features/es-syntax": "off"
      }
    }
  ]
}
